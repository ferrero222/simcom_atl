{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-debug",
            "type": "shell",
            "command": "make",
            "args": [
                "norun"
            ],
            "options": {
                "cwd": "${workspaceFolder}/tests"
            },
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Сборка проекта для отладки"
        },
        {
            "label": "build-and-run",
            "type": "shell",
            "command": "make",
            "options": {
                "cwd": "${workspaceFolder}/tests"
            },
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "make",
            "args": [
                "clean"
            ],
            "options": {
                "cwd": "${workspaceFolder}/tests"
            },
            "group": "build"
        }
    ]
}